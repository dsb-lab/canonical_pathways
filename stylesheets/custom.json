[
    {
        "selector": "node",
        "style": {
            "shape": "ellipse",
            "width": "data(node_size)",
            "height": "data(node_size)",
            "background-color": "data(node_color)",
            "label": "data(name)",
            "font-size": "data(font_size)",
            "color": "data(font_color)",
            "text-halign": "center",
            "text-valign": "center",
            "border-width": "data(borderSize)",
            "border-color": "data(borderColor)",
